        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jest": "^23.13.1",
        "eslint-plugin-prettier": "^3.1.3",
        "glob": "^7.1.6",
        "jest": "^26.0.1",
        "lerna": "^3.21.0",
        "lerna-update-wizard": "^0.17.8",
        "prettier": "^2.0.5",
        "ts-jest": "^26.0.0",
        "typescript": "^3.9.3"
