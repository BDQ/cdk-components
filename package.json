{
    "name": "root",
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "postinstall": "lerna bootstrap",
        "pretest": "lerna run pretest",
        "test": "jest",
        "build:tools": "lerna --scope @cloudcomponents/build-tools run build ",
