        "lint": "eslint '*/**/*.ts' --cache  --report-unused-disable-directives",
        "lint:ci": "eslint '*/**/*.ts' --report-unused-disable-directives",
        "lint:fix": "eslint '*/**/*.ts' --cache --fix"
    },
    "devDependencies": {
        "@types/jest": "^24.0.21",
        "@types/node": "^12.12.4",
        "@typescript-eslint/eslint-plugin": "^2.6.0",
